extends base.pug

block main
    section(class='page createuser')
        .container
            .page__body
                h2.page__title Регистрация пользователя

                .createuser__form-container
                    form(class='form' method='post')
                        {% csrf_token %}
                        .form__error {{ form.non_field_errors }}
                        div(class='cols-auto-fit')
                            div
                                .form__row
                                    .text-field
                                        label(for='{{ form.username.id_for_label }}') Логин
                                        {{ form.username }}
                                        span.error {{ form.username.errors }}
                                .form__row                                
                                    .text-field
                                        label(for='{{ form.email.id_for_label }}') {{ form.email.label }}
                                        {{ form.email }}
                                        span.error {{ form.email.errors }}
                            div
                                .form__row
                                    .text-field
                                        label(for='{{ form.password1.id_for_label }}') {{ form.password1.label }}
                                        {{ form.password1 }}
                                        span.error {{ form.password1.errors }}
                                .form__row
                                    .text-field
                                        label(for='{{ form.password2.id_for_label }}') {{ form.password2.label }}
                                        {{ form.password2 }}
                                        span.error {{ form.password2.errors }}
                        .form__footer
                            button(class='btn' type='submit') Далее